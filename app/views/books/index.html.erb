<h2>Books</h2>

<% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%#= link_to "Edit", edit_book_path(@book) %>
  <%#= link_to "Show", book_path(@book) %>
  <%#= link_to "Destroy", book_path(method: :destroy) %>
<% end %>


<h3>New Book</h3>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %><br>
	
  <%= f.submit %>
<% end %>